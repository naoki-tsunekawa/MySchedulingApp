<div class="d-flex align-items-center mt-4 mb-4">
  <div class="ml-auto schedules__linkBox">
    <%= link_to '一覧', schedules_path, class:'btn btn-outline-dark'%>
    <%= link_to '編集', edit_schedule_path(@schedule), class: 'btn btn-outline-dark' %>
  </div>
</div>

<div class="card">
  <div class="card-header">
    <h4><%= @schedule.title %></h4>
    <p class="deadline_text"><%= @schedule.deadline.to_s(:datetime_jp)%></p>
  </div>
  <div class="card-body">
    <p class="card-text"><%= simple_format(@schedule.body) %></p>
    <p class="text-right font-weight-bold mr-10"><%= @schedule.name %></p>
  </div>
</div>
