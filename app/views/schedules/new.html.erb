<div class="d-flex align-items-center">
  <h1 class="title">新規スケジュール作成</h1>
  <div class="ml-auto schedules__linkBox">
    <a href="/schedules" class="btn btn-outline-dark">スケジュール一覧</a>
  </div>
</div>
<%= form_with model:@schedule do |form|  %>
  <div class="form-group">
    <%= form.label :name, '名前' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :title, 'タイトル' %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :body, '本文' %>
    <%= form.text_area :body, class: 'form-control', rows: 10 %>
  </div>
  <div class="form-group">
    <%= form.label :deadline, '期限' %>
    <%= form.date_field :deadline %>
  </div>
  <%= form.submit '保存', class: 'btn btn-primary' %>
<% end %>
